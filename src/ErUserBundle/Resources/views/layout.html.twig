{% extends "::base.html.twig" %}

{% block body %}
    
    {% for key, messages in app.session.flashbag.all() %}
        <div class="alert alert-{{ key }}}}">
            <ul>
                {% for message in messages %}
                    <li>
                        {{ message| trans({}, 'FOSUserBundle') }}
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
    
    {% block fos_user_content %}
    {% endblock fos_user_content %}
    
{% endblock %}
